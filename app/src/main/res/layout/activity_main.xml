<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="48dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGreetApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description_button_greetApp"
        android:text="@string/greetApp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIMCApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description_button_imcApp"
        android:text="@string/imcApp"
        app:layout_constraintTop_toBottomOf="@+id/btnGreetApp" />

</androidx.constraintlayout.widget.ConstraintLayout>